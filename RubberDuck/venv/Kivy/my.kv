WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>
    name: "main"
    GridLayout:
        cols:2
        size: root.width, root.height

        Label:
            text:"Quack!\n\nChecking in!\nYou Have Been Working For a While Now"
            font_size:20
            text_size: self.width, None
            height: self.texture_size[1]

        Image:
            source:"../Assets/rubberduck_icon2.png"
            background_color: (1, 1, 1, 1)

        Button:
            text:"Take a Break"
            size_hint: (1, 0.3)
            bold: True
            background_color: '#1d3557'
            on_press: app.timedBreak()

        Button:
            text:"Check on Me Later"
            size_hint: (1, 0.3)
            bold: True
            background_color: '#1d3557'
            on_press: app.checkBackLater()

<SecondWindow>
    name: "main"
    GridLayout:
        cols:2
        size: root.width, root.height

        Label:
            text:"Quack!\n\nChecking in!\nYou Have Been Working For a While Now"
            font_size:20
            text_size: self.width, None
            height: self.texture_size[1]

        Image:
            source:"../Assets/rubberduck_icon2.png"
            background_color: (1, 1, 1, 1)

        Button:
            text:"Take a Break"
            size_hint: (1, 0.3)
            bold: True
            background_color: '#1d3557'

        Button:
            text:"Check on Me Later"
            size_hint: (1, 0.3)
            bold: True
            background_color: '#1d3557'
            on_press:
                app.checkBackLater()